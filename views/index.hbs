<body>
	<ul><input type="radio" name = "topic" value="depression" id="topic" /> Depression</ul>
	<ul><input type="radio" name = "topic" value="academicStress" id="topic" /> Academic Stress </ul>
	<ul><input type="radio" name = "topic" value="relationships" id="topic"/> Relationships </ul>
	<ul><input type="radio" name = "topic" value="other" id="topic"/> Everything else</ul>
	<p>What is the first 5 digits of your student id?</p>
	<input type="text" placeholder="i.e. 11660" id="studentId"/> 
	<p>Entire desired screenname below</p>
	<input type="text" id="name"/> 
	<input type="button" value="join" id="join"/>Join 
	<input type="button" value="leave room" id="leaveRoom"/> Leave room
<ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
</body>
	<script src="http://code.jquery.com/jquery-3.2.0.min.js"></script>
	<script src="/javascripts/jquery.mCustomScrollbar.concat.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
<!-- 	<script type="text/javascript" src="/javascripts/chat.js"></script>
 -->	<script>
		var connected = false;
		var username = 'Anonymous';
		var roomId = '';
    var peerName;

	  	var socket = io('http://localhost:3000', {reconnection: false});
	    socket.on('waitingForPartner', function(message){
	    	alert(message)
	    })

	    socket.on('greeting', function(message, id){
	    	console.log("The server says... ", message, " and your socket id is... ", id)
	    })

	    socket.on('chatStart', function(data) { 
		    roomId = data.roomId;
        peerName = data.peerName;
		    alert("Partner has been found"); // some method which will show chat window
  		});

  		socket.on('chatEnd', function(data) {
      		// hide_chat_window(); // TO DO this will close chat window and alert user that the peer ended chat
      		socket.leave(roomId); // can leavefrom both server and client, client is better
      		roomId = '';
  		});
      socket.on('message', function(msg){ //{message, senderId}
        console.log("client side message", msg.message)
        $('#messages').append($('<li>').text(msg.message));
      });
  		var leave_chat = function() { // call this when user want to end current chat
  		    if (connected) {
  		        socket.emit('leaveRoom');
  		        socket.leave(roomId);
  		        roomId = '';
  		    }
  		};

	    $("#join").click(function(){
	    	console.log("#JOIN~~~~~~~~~~~~~")
	    	socket.emit('join', {name: $("#name").val(), studentId: $("#studentId").val(), topic: $("#topic").val()})
	    	console.log("JOIN emitted", $("#name").val()," ", $("#studentId").val() )
	    })
	    $("#leaveRoom").click(function(){
	    	socket.emit('leaveRoom');
	    })

      $(function () {
        $('form').submit(function(){
          $('#messages').append($('<li>').text($('#m').val()));
          socket.emit('message', {"message": $('#m').val(), "senderId": socket.id});
          $('#m').val('');
          return false;
        });
      });
	</script>
</html>
